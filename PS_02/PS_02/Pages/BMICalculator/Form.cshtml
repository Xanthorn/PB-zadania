@page
@model PS_02.Pages.BMICalculator.FormModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="border border-primary">
                <div class="justify-content-center">
                    <div class="text-center"><h1>Oblicz swój wskaźnik BMI</h1></div>
                    <div>
                        <form method="post">
                            <div>
                                <input asp-for="Person.Name" pattern="([A-Z]{1})([a-z]+)" maxlength="15" placeholder="Imię" required />
                                <span asp-validation-for="Person.Name"></span>
                            </div>
                            <div>
                                <input asp-for="Person.Email" type="email" placeholder="Adres E-mail (opcjonalne)" />
                                <span asp-validation-for="Person.Email"></span>
                            </div>
                            <div>
                                <input asp-for="Person.Height" pattern="(\d+)|(\d*\.?\d*)" placeholder="Wzrost" required />
                                <span asp-validation-for="Person.Height"></span>
                                <select name="HeightUnit">
                                    <option value="1">cm</option>
                                    <option value="2">m</option>
                                </select>
                            </div>
                            <div>
                                <input asp-for="Person.Weight" pattern="\d+\.?\d{0,2}" placeholder="Waga" required />
                                <span asp-validation-for="Person.Weight"></span>
                            </div>
                            <div>
                                <input asp-for="Person.Age" type="number" pattern="[0-9]+" min="1" max="120" placeholder="Wiek (opcjonalne)" /><br />
                            </div>
                            <div>
                                <input type="submit" name="Oblicz" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


