@page
@model Semester_Project.Pages.Admin_Area.Tags.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag.Courses)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var item in Model.Tag.Courses)
                {
                    <div>@item.Name</div>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Tag.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
