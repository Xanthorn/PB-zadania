@page
@model Semester_Project.Pages.Admin_Area.Tags.ListModel
@{
    ViewData["Title"] = "Lista Tagów";
}
<div class="row align-items-center">
    <div class="col">
        <h1 class="display-4 text-center">Lista Tagów</h1>
    </div>
</div>
@{
    if (Model.Tags.Count == 0)
    {
        <div class="row align-items-center">
            <div class="col text-right">
                <button class="btn btn-lg btn-primary" asp-page="/Admin-Area/Tags/Add">Dodaj nowy tag:<img src="~/images/glyphs/plus_32x32.png" /></button>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col">
                <h2 class="text-center">Lista tagów jest obecnie pusta, ale jeśli masz ochotę to możesz dodać nowy</h2>
            </div>
        </div>
    }
    else
    {
        <div class="row align-items-center pb-4">
            <div class="col text-right">
                <a class="btn btn-primary" asp-page="/Admin-Area/Tags/Add">Dodaj nowy tag</a>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr class="table-primary">
                    <th scope="col" class="col-2 text-center">Id</th>
                    <th scope="col" class="col-8 text-center">Nazwa</th>
                    <th scope="col" class="col-1 text-center">Modyfikuj</th>
                    <th scope="col" class="col-1 text-center">Usuń</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Tags.Count; i++)
                    {
                        <tr>
                            <th scope="row" class="col-2">@Model.Tags[i].Id</th>
                            <th scope="row" class="col-8">@Model.Tags[i].Name</th>
                            <th scope="row" class="col-1 text-center"><a asp-page="/Admin-Area/Tags/Modify" asp-route-id="@Model.Tags[i].Id"><img src="~/images/glyphs/edit_32x32.png" /></a></th>
                            <th scope="row" class="col-1 text-center"><a asp-page="/Admin-Area/Tags/Delete" asp-route-id="@Model.Tags[i].Id"><img src="~/images/glyphs/trash_32x32.png" /></a></th>
                        </tr>
                    }
                }
            </tbody>
        </table>

    }
}