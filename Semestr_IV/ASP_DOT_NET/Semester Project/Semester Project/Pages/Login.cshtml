@page
@model Semester_Project.Pages.LoginModel
@{
    ViewData["Title"] = "Index";
}
<h1 class="display-4 text-center">Login</h1>
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="row justify-content-center">
            <div class="col-6 form-group">
                <label asp-for="user.Username" class="control-label"></label>
                 <input asp-for="user.Username" class="form-control">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 form-group">
                <label asp-for="user.Password" class="control-label col-sm2"></label>
                 <input asp-for="user.Password" class="form-control">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 form-group text-center">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>