@page
@model Semester_Project.Pages.Admin_Area.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4 text-center">Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Tags)
        </dt>
        <dd class="col-sm-10">
            @{  
                foreach (var item in Model.Course.Tags)
                {
                    <div>@item.Name</div>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Admin-Area/Courses/Edit" asp-route-id="@Model.Course.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
