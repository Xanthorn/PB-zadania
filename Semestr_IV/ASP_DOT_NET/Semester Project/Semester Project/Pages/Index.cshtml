@page
@model Semester_Project.Pages.Admin_Area.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>List of available courses</h1>

<p>
    <a asp-page="Admin-Area/Courses/Create">Create New</a>
</p>
<form method="post" asp-page-handler="filters">
    <div class="row pb-4">
        <div class="col-5">
            <select class="form-control" asp-for="SelectedTag" asp-items="Model.TagOptions"></select>
        </div>
        <div class="col-1 text-left">
            <button class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="Admin-Area/Courses/Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="Admin-Area/Courses/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
