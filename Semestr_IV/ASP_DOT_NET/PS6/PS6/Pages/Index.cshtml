@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col text-left">
            <h1>Lista produktów:</h1>
        </div>
        <div class="col"></div>
        <div class="col text-right input-group">
            <h2 style="margin-right: 0.5rem">Dodaj nowy Produkt </h2><a asp-page="Add"><img src="~/glyphs/plus_32x32.png" class="border border-dark rounded" /></a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr class="text-center">
            <th scope="col" class="col-2">Id</th>
            <th scope="col" class="col-4">Nazwa</th>
            <th scope="col" class="col-3">Cena</th>
            <th scope="col" class="col-1">Szczegóły</th>
            <th scope="col" class="col-1">Edytuj</th>
            <th scope="col" class="col-1">Usuń</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <th class="col-2">@Model.Products[i].Id</th>
                    <th class="col-4">@Model.Products[i].Name</th>
                    <th class="col-3">@Model.Products[i].Price zł</th>
                    <th class="text-center col-1"><a asp-page="Details" asp-route-id=@Model.Products[i].Id><img src="~/glyphs/info_32x32.png" /></a></th>
                    <th class="text-center col-1"><a asp-page="Edit" asp-route-id=@Model.Products[i].Id><img src="~/glyphs/edit_32x32.png" /></a></th>
                    <th class="text-center col-1"><a asp-page="Remove" asp-route-id=@Model.Products[i].Id><img src="~/glyphs/trash_32x32.png" /></a></th>
                </tr>
            }
        }
    </tbody>
</table>
