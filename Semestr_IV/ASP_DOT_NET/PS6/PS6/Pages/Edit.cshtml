@page
@model PS6.Pages.EditModel
@{
}

<div class="container col-6 border border-dark rounded justify-content-center text-center">
    <div class="row">
        <div class="col-12 text-white bg-dark">
            <h1>Edytuj produkt</h1>
        </div>
    </div>
    <form method="post">
        <div class="row justify-content-center" style="padding-top: 1rem">
            <div class="col-12 input-group">
                <input asp-for="NewProduct.Name" class="form-control" type="text" maxlength="50" placeholder="Nazwa" value="@Model.OldProduct.Name" required />
            </div>
        </div>
        <div class="row justify-content-center" style="padding-top: 0.25rem">
            <div class="col-12 input-group">
                <input asp-for="NewProduct.Price" class="form-control" type="text" min="0" max="99999999" pattern="([0-9]{1},[0-9]{1,2})|([1-9]{1}\d*,\d{1,2})|([1-9]\d*)" placeholder="Cena" value="@Model.OldProduct.Price" required />
                <div class="input-group-append">
                    <span class="input-group-text">zł</span>
                </div>
            </div>
        </div>
        <div class="row justify-content-center" style="padding-top: 0.25rem">
            <div class="col-12 input-group">
                <textarea asp-for="ProductDescription" class="form-control" maxlength="500" placeholder="Opis" required>@Model.OldProduct.Description</textarea>
            </div>
        </div>
        <div class="row pt-2">
            <div class="col">
                <select asp-for="NewProduct.IdCategory" class="form-select form-select-lg" aria-label="Kategoria" required>
                    <option value="1">Podzespoły Komputerowe</option>
                    <option value="2">Laptopy</option>
                    <option value="3">Komputery</option>
                    <option value="4">Peryferia Komputerowe</option>
                    <option value="5">Smartfony i Smartwatche</option>
                </select>
            </div>
        </div>
        <div class="row justify-content-center" style="padding-top: 0.5rem; padding-bottom: 0.5rem">
            <div class="col-12 input-group">
                <div class="input-group justify-content-center">
                    <button type="submit" name="click" class="btn btn-dark col-4" value="1">Zapisz</button>
                    <button type="submit" name="click" class="btn btn-light btn-outline-dark col-4" value="0">Anuluj</button>
                </div>
            </div>
        </div>
    </form>
</div>