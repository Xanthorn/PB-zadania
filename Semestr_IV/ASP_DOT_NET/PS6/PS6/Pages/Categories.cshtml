@page
@model PS6.Pages.CategoriesModel
@{
}

<div class="container">
    <div class="row">
        <div class="col text-left">
            <h1>Lista kategorii:</h1>
        </div>
        <div class="col"></div>
        <div class="col text-right input-group">
            <h2 style="margin-right: 0.5rem">Dodaj nowy Produkt </h2><a asp-page="Add"><img src="~/glyphs/plus_32x32.png" class="border border-dark rounded" /></a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr class="text-center">
            <th scope="col" class="col-3">Id</th>
            <th scope="col" class="col-4">Krótka Nazwa</th>
            <th scope="col" class="col-5">Długa Nazwa</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Categories.Count; i++)
            {
                <tr>
                    <th class="col-3">@Model.Categories[i].Id</th>
                    <th class="col-4">@Model.Categories[i].ShortName</th>
                    <th class="col-5">@Model.Categories[i].LongName</th>
                </tr>
            }
        }
    </tbody>
</table>
