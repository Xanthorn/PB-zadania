@page
@model PS5.Pages.Shared.DetailsModel
@{
}

<div class="container col-6 justify-content-center border border-dark rounded">
    <div class="row justify-content-center">
        <div class="col-12 text-center text-white bg-dark">
            <h1>Szczegóły produktu</h1>
        </div>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-2 input-group">
                <p class="text-left text-dark"><strong>Nazwa</strong></p>
            </div>
            <div class="col-10 input-group">
                <p class="text-left text-dark">@Model.Product.Name</p>
            </div>
        </div>
        <div class="row">
            <div class="col-2 input-group">
                <p class="text-left text-dark"><strong>Cena</strong></p>
            </div>
            <div class="col-10 input-group">
                <p class="text-left text-dark">@Model.Product.Price</p>
            </div>
        </div>
        <div class="row">
            <div class="col-2 input-group">
                <p class="text-left text-dark"><strong>Opis</strong></p>
            </div>
            <div class="col-10 input-group">
                <p class="text-left text-dark">@Model.Product.Description</p>
            </div>
        </div>
        <div class="row">
            <div class="input-group">
                <div class="input-group justify-content-center" style="padding-bottom: 0.5rem">
                    <button type="submit" name="click" class="btn btn-dark col-4" value="1">Dodaj do koszyka</button>
                    <button type="submit" name="click" class="btn btn-light btn-outline-dark col-4" value="0">Powrót</button>
                </div>
            </div>
        </div>
    </form>
</div>